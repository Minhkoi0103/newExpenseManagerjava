<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.expensemanager.controller.StatisticsController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: white;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Tiêu đề -->
    <Label fx:id="titleLabel" 
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Phần tổng quan -->
    <VBox fx:id="overviewBox" 
          spacing="5"
          style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-radius: 5;">
        <Label fx:id="totalLabel" 
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <Label fx:id="maxCategoryLabel" 
               style="-fx-font-size: 14px;"/>
        <Label fx:id="maxCategoryCount" 
               style="-fx-font-size: 14px;"/>
        <Label fx:id="maxCategoryAmount" 
               style="-fx-font-size: 14px;"/>
    </VBox>

    <!-- Tiêu đề chi tiết -->
    <Label fx:id="detailTitle" 
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Phần chi tiết theo danh mục -->
    <VBox fx:id="categoryDetails" 
          spacing="5"
          style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-radius: 5;"/>

</VBox> 